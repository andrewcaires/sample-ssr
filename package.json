{
  "name": "sample-ssr",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --env-file=.env.dev server",
    "build": "npm run build:client && npm run build:server",
    "build:qa": "npm run build:client:qa && npm run build:server:qa",
    "build:client": "NODE_ENV=production vite build --mode prod --ssrManifest --outDir dist/client",
    "build:server": "NODE_ENV=production vite build --mode prod --ssr src/entry-server.ts --outDir dist/server",
    "build:client:qa": "NODE_ENV=production vite build --mode qa --ssrManifest --outDir dist/client",
    "build:server:qa": "NODE_ENV=production vite build --mode qa --ssr src/entry-server.ts --outDir dist/server",
    "serve": "node --env-file=.env.prod server",
    "serve:qa": "node --env-file=.env.qa server"
  },
  "dependencies": {
    "@andrewcaires/cookie": "^1.0.4",
    "@andrewcaires/dom": "^1.1.0",
    "@andrewcaires/fetch": "^1.1.0",
    "@andrewcaires/translate": "^1.1.0",
    "@andrewcaires/ui": "^0.3.1",
    "@andrewcaires/utils.js": "^0.4.1",
    "@unhead/ssr": "^1.11.11",
    "@unhead/vue": "^1.11.11",
    "compression": "^1.7.5",
    "devalue": "^5.1.1",
    "express": "^4.21.1",
    "pinia": "^2.2.6",
    "vite": "^5.4.11",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.10.4",
    "@tsconfig/node20": "^20.1.4",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-vue": "^5.1.5",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/tsconfig": "^0.6.0",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.31.0",
    "prettier": "^3.3.3",
    "sass": "^1.80.7",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.14.0",
    "vite-plugin-eslint2": "^5.0.2",
    "vite-plugin-vue-devtools": "^7.6.4",
    "vue-tsc": "^2.1.10"
  }
}
