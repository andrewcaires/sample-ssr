{
  "name": "sample-ssr",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --env-file=.env.dev server",
    "build": "npm run build:client && npm run build:server",
    "build:qa": "npm run build:client:qa && npm run build:server:qa",
    "build:client": "NODE_ENV=production vite build --mode prod --ssrManifest --outDir dist/client",
    "build:server": "NODE_ENV=production vite build --mode prod --ssr src/entry-server.ts --outDir dist/server",
    "build:client:qa": "NODE_ENV=production vite build --mode qa --ssrManifest --outDir dist/client",
    "build:server:qa": "NODE_ENV=production vite build --mode qa --ssr src/entry-server.ts --outDir dist/server",
    "serve": "node --env-file=.env.prod server",
    "serve:qa": "node --env-file=.env.qa server"
  },
  "dependencies": {
    "@andrewcaires/cookie": "^1.0.5",
    "@andrewcaires/dom": "^1.1.0",
    "@andrewcaires/fetch": "^1.1.0",
    "@andrewcaires/translate": "^1.1.0",
    "@andrewcaires/ui": "^0.3.3",
    "@andrewcaires/utils.js": "^0.4.6",
    "@unhead/ssr": "^2.0.3",
    "@unhead/vue": "^2.0.3",
    "compression": "^1.8.0",
    "devalue": "^5.1.1",
    "express": "^5.1.0",
    "pinia": "^3.0.1",
    "vite": "^6.2.5",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.11.0",
    "@tsconfig/node20": "^20.1.5",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.24.0",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "sass": "^1.86.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.29.0",
    "vite-plugin-eslint2": "^5.0.3",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.8"
  }
}
